<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Summoner</th>
      <th>Position</th>
      <th>Portrait</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Age</th>
      <th>Country</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.summoner %></td>
        <td><%= player.position %></td>
        <td><%= player.portrait %></td>
        <td><%= player.fname %></td>
        <td><%= player.lname %></td>
        <td><%= player.age %></td>
        <td><%= player.country %></td>
        <td><%= player.team %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

